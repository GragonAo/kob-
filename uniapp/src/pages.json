{
	// 组件自动引入规则
	"easycom": {
		// 是否开启自动扫描 @/components/$1/$1.vue 组件
		"autoscan": true,
		// 以正则方式自定义组件匹配规则
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/hello/hello",
			"style": {
				"navigationBarTitleText": "测试页"
			}
		},
		{
			"path": "pages/bot/bot",
			"style": {
				"navigationBarTitleText": "机器人列表页"
			}
		},
		{
			"path": "pages/bot/botInfo",
			"style": {
				"navigationBarTitleText": "机器人页"
			}
		},
		{
			"path": "pages/raking/raking",
			"style": {
				"navigationBarTitleText": "排行榜"
			}
		},
		{
			"path": "pages/battleRecord/battleRecord",
			"style": {
				"navigationBarTitleText": "对战记录"
			}
		},
		{
			"path": "pages/playGround/playGround",
			"style": {
				"navigationBarTitleText": "游戏对战"
			}
		}
	],
	"tabBar": {
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}